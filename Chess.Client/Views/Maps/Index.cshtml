@using Chess.Application.DTOs
@model List<MapDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid py-3"> 
    <div class="row">
        @foreach (var map in Model)
        {
            <div class="col-12 border-bottom border-light mb-3 text-start">
                <h3 class="mb-1">@map.Name</h3>
                        
                <h6>(@map.Cols x @map.Rows)</h6>
            </div>

            <div class="col-12">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        @foreach (var box in map.Boxes)
                        {
                            <div class="col-1 bg-@(box.Color ? "black" : "white border")" style="height: 120px;">
                                @* -- BOX -- *@
                            </div>

                            @if(Convert.ToInt32(box.ColId) % 8 == 0){
                                <div class="offset-2"></div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>